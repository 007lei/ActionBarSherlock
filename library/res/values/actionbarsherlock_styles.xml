<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="Theme.Sherlock" parent="android:style/Theme">
		<item name="actionBarStyle">@style/Widget.Sherlock.ActionBar</item>
		<item name="actionBarTabStyle">@style/Widget.Sherlock.ActionBarView_TabView</item>
		<item name="actionBarTabBarStyle">@null</item>
		<item name="actionBarTabTextStyle">@style/ActionBarSherlock.TabTextStyle</item>
		<item name="actionButtonStyle">@style/Widget.Sherlock.ActionButton</item>
		<item name="actionDropDownStyle">@style/Widget.Sherlock.Spinner.DropDown.ActionBar</item>
		<item name="actionHomeButtonStyle">@style/Widget.Sherlock.ActionButton.Home</item>
		<item name="actionMenuTextAppearance">@null</item>
		<item name="actionMenuTextColor">@null</item>
		<item name="actionModeBackground">@null</item>
		<item name="actionModeCloseButtonStyle">@null</item>
		<item name="actionModeCloseDrawable">@null</item>
		<item name="actionModeCopyDrawable">@null</item>
		<item name="actionModeCutDrawable">@null</item>
		<item name="actionModePasteDrawable">@null</item>
		<item name="actionOverflowButtonStyle">@style/Widget.Sherlock.ActionButton.Overflow</item>
		<item name="dropDownListViewStyle">@null</item>
		<item name="popupMenuStyle">@null</item>
	</style>
	
	<style name="Widget.Sherlock.ActionBar" parent="android:style/Widget">
		<item name="homeAsUpIndicator">@drawable/ic_ab_back_holo_dark</item>
		<item name="listIndicator">@drawable/spinner_background_holo_dark</item>
	</style>
	
	<style name="Widget.Sherlock.ActionBarView_TabView" parent="android:style/Widget">
		<item name="android:background">@drawable/tab_indicator_holo</item>
		<item name="android:padding">5dp</item>
    </style>
	
	<style name="Widget.Sherlock.ActionButton" parent="android:style/Widget">
		<item name="android:padding">5dp</item>
		<item name="android:background">@color/actionbarwatson_item_bg</item>
	</style>
	
	<style name="Widget.Sherlock.ActionButton.Home">
		<item name="android:padding">0dp</item>
	</style>
	
	<style name="Widget.Sherlock.ActionButton.Overflow">
	</style>
	
	<style name="Widget.Sherlock.Spinner.DropDown.ActionBar" parent="android:style/Widget.Spinner.DropDown">
        <item name="android:background">@drawable/spinner_background_holo_dark</item>
        <item name="android:gravity">left|center_vertical</item>
	</style>
	
	<style name="ActionBarSherlock.TabTextStyle" parent="android:style/Widget">
		<item name="android:textColor">@color/actionbarwatson_tab_text_color</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">16dp</item>
	</style>
	
	
	
	
    <style name="Theme.Sherlock.Light" parent="android:style/Theme.Light">
		<item name="actionBarStyle">@style/Widget.Sherlock.Light.ActionBar</item>
		<item name="actionBarTabStyle">@style/Widget.Sherlock.Light.ActionBarView_TabView</item>
		<item name="actionBarTabBarStyle">@null</item>
		<item name="actionBarTabTextStyle">@style/ActionBarSherlock.Light.TabTextStyle</item>
		<item name="actionButtonStyle">@style/Widget.Sherlock.Light.ActionButton</item>
		<item name="actionDropDownStyle">@style/Widget.Sherlock.Light.Spinner.DropDown.ActionBar</item>
		<item name="actionHomeButtonStyle">@style/Widget.Sherlock.Light.ActionButton.Home</item>
		<item name="actionMenuTextAppearance">@null</item>
		<item name="actionMenuTextColor">@null</item>
		<item name="actionModeBackground">@null</item>
		<item name="actionModeCloseButtonStyle">@null</item>
		<item name="actionModeCloseDrawable">@null</item>
		<item name="actionModeCopyDrawable">@null</item>
		<item name="actionModeCutDrawable">@null</item>
		<item name="actionModePasteDrawable">@null</item>
		<item name="actionOverflowButtonStyle">@style/Widget.Sherlock.Light.ActionButton.Overflow</item>
		<item name="dropDownListViewStyle">@null</item>
		<item name="popupMenuStyle">@null</item>
	</style>
	
	<style name="Widget.Sherlock.Light.ActionBar" parent="android:style/Widget">
		<item name="homeAsUpIndicator">@drawable/ic_ab_back_holo_light</item>
		<item name="listIndicator">@drawable/spinner_background_holo_light</item>
	</style>
	
	<style name="Widget.Sherlock.Light.ActionBarView_TabView" parent="android:style/Widget">
		<item name="android:background">@drawable/tab_indicator_holo</item>
		<item name="android:paddingLeft">5dp</item>
		<item name="android:paddingRight">5dp</item>
    </style>
	
	<style name="Widget.Sherlock.Light.ActionButton" parent="android:style/Widget">
		<item name="android:padding">5dp</item>
		<item name="android:background">@color/actionbarwatson_item_bg</item>
	</style>
	
	<style name="Widget.Sherlock.Light.ActionButton.Home">
		<item name="android:padding">0dp</item>
	</style>
	
	<style name="Widget.Sherlock.Light.ActionButton.Overflow">
	</style>
	
	<style name="Widget.Sherlock.Light.Spinner.DropDown.ActionBar" parent="android:style/Widget.Spinner.DropDown">
        <item name="android:background">@drawable/spinner_background_holo_light</item>
        <item name="android:gravity">left|center_vertical</item>
	</style>
	
	<style name="ActionBarSherlock.Light.TabTextStyle" parent="ActionBarSherlock.TabTextStyle">
		<item name="android:textColor">@color/actionbarwatson_tab_text_color_light</item>
	</style>
</resources>
